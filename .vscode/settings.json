{
    "spellright.language": [
        "en_US",
        "it_IT"
    ],
    "spellright.documentTypes": [
        "markdown",
        "latex",
        "plaintext"
    ],
    "editor.wordWrap" : "on",
    "editor.wrappingIndent": "indent",
    "cSpell.language": "en,it",
    "cSpell.words": [
        "openwrt"
    ],
    "latex-workshop.latex.tools": [
        {
            "name": "latexmk",
            "command": "latexmk",
            "args": [
                "-shell-escape",
                "-synctex=1",
                "-interaction=nonstopmode",
                "-file-line-error",
                "-pdf",
                "-outdir=%OUTDIR%",
                "%DOC%"
            ]
        }
    ],
}